<h2>New actions</h2>
<br>
{{input type="text" value=model.title id="homework-title"}}
<br>
<br>
<ul class="nav nav-tabs">
  {{#each model.trays as |tray index|}}
    <li class={{if (eq index tab) 'active'}}>
      {{link-to tray.title "new-actions" (query-params tab=index)}}
    </li>
  {{/each}}
</ul>
{{#new-accordion-multi-form tray=selectedTray selected=selectedTask deleteTaskAction="deleteTaskFromTray" as |task|}}
  <p>{{input type="text" value=task.title placeholder="Title"}}</p>
  <p>{{input type="text" value=task.description placeholder="Description"}}</p>
{{/new-accordion-multi-form}}
<br>
<br>
<button {{action "confirm"}}>Confirm</button>
<button {{action "rollback"}}>Rollback</button>